# ============================================================
# ENVIRONNEMENT GÉNÉRAL
# ============================================================

# Mode d'exécution de l'application
NODE_ENV=production

# Nom de l'application
APP_NAME=trouve-ton-artisan


# ============================================================
# BASE DE DONNÉES (MySQL / MariaDB)
# ============================================================

# Hôte de la base de données
DB_HOST=localhost

# Port MySQL
DB_PORT=3306

# Nom de la base de données
DB_NAME=trouve_ton_artisan

# Utilisateur MySQL
DB_USER=tta_user

# Mot de passe MySQL
DB_PASSWORD=ttapassword

# Dialecte utilisé par Sequelize
DB_DIALECT=mysql


# ============================================================
# SMTP – ENVOI D’EMAILS (FORMULAIRE DE CONTACT)
# ============================================================

# Serveur SMTP
SMTP_HOST=smtp.exemple.com

# Port SMTP (587 ou 465 généralement)
SMTP_PORT=587

# Utilisation du chiffrement TLS
SMTP_SECURE=false

# Identifiants SMTP
SMTP_USER=contact@exemple.com
SMTP_PASS=**********

# Adresse d’expédition
MAIL_FROM="Trouve ton artisan <no-reply@exemple.com>"

# Adresse de réception des messages de contact
CONTACT_RECEIVER_EMAIL=contact@exemple.com


# ============================================================
# FRONTEND & CORS
# ============================================================

# URL du frontend autorisée pour les requêtes CORS
FRONTEND_URL=https://trouve-ton-artisan.exemple.fr

# URL alternative (si nécessaire)
FRONTEND_URL_WWW=https://www.trouve-ton-artisan.exemple.fr

# URL de prévisualisation (facultatif)
FRONTEND_URL_PREVIEW=


# ============================================================
# PORT (FOURNI PAR L’HÉBERGEUR EN PRODUCTION)
# ============================================================

# En production, ce port est injecté automatiquement
PORT=3000
